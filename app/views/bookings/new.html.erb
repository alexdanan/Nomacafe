<div class= "container py-5">
  <div class="row">
    <div class ="col-12 col-md-6 offset-lg-2">
      <div class = "bg-white rounded p-3 shadow">
        Create booking
        <%= simple_form_for [@table, @booking] do |t|%>
          <%= t.input :day, placeholder: "What day?"%>
          <%= t.input :start_time, placeholder: "Start time"%>
          <%= t.input :end_time, placeholder: "End time"%>
          <%= t.submit class: "btn btn-flat"%>
        <%end%>
        </div>
      </div>
    </div>
  </div>
</div>