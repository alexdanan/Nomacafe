<body class="login">
  <div class="uber-container">
    <div class="container" style="position: relative;">
      <div class="title-header">
        <h1 class="display-3">NomaCafe</h1>
      </div>
      <p class="text-center text-white">Connect with your favourite cafes</p>
      <div class="session-container">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="sign-link bg-success">
              <p>Sign In With Facebook</p>
            </div>
            <div class="sign-link">
              <p>Sign In With Google</p>
            </div>
            <p class="text-center">Or</p>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: 'user@domain.com',
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: 'password123',
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <%= f.button :submit, "Log in", class: "btn btn-block btn-round" %>
        <% end %>
        <div class="render">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>
